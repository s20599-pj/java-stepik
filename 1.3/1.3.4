import java.util.Scanner;

class main {
    public static void main(String args[]) {
        double a;
        int b=0;

        Scanner in = new Scanner(System.in);
        do {
            if(in.hasNextInt() == false)
                return;
            a = in.nextDouble();
        }while(a<1);
        
        for(double i=1;i<=a;i++){
            for(int j=1;j<=i;j++)
                System.out.print("*");
            System.out.print("\n");
        }
        for(double i=a;i>0;i--) {
            for (double j=i;j>0;j--)
                System.out.print("*");
            System.out.print("\n");
        }
        for(double i=1;i<=a;i++){
            for(int j=0;j<b;j++)
                System.out.print(" ");
            for(double j=a;j>b;j--)
                System.out.print("*");
            System.out.print("\n");
            if(b!=a-1)
                b++;
        }
        for(double i=1;i<=a;i++){
            for(int j=0;j<b;j++)
                System.out.print(" ");
            for(double j=a;j>b;j--)
                System.out.print("*");
            System.out.print("\n");
            b--;
        }
    }
}